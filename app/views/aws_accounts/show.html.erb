<div class="container">
  <%= render 'shared/show_action_bar', title: 'Show AWS Account',
             objects_path: aws_accounts_path,
             edit_object_path: edit_aws_account_path %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">RDS Instances</h3>
    </div>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Instance Identifier:</th>
      </tr>
      </thead>
      <tbody>
      <% if @aws_account.aws_rds_instances.count > 0 %>
        <% @aws_account.aws_rds_instances.each do |aws_rds_instance| %>
          <tr>
            <td><%= aws_rds_instance.name %></td>
            <td><%= aws_rds_instance.db_instance_identifier %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2">None</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">EC2 Instances</h3>
    </div>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Instance ID:</th>
      </tr>
      </thead>
      <tbody>
      <% if @aws_account.aws_ec2_instances.count > 0 %>
        <% @aws_account.aws_ec2_instances.each do |aws_ec2_instance| %>
          <tr>
            <td><%= aws_ec2_instance.name %></td>
            <td><%= aws_ec2_instance.instance_id %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2">None</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>