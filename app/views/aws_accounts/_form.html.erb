<%= form_for(@aws_account, html: {:class => "form-horizontal", :role => 'form'}) do |f| %>
  <%= render 'shared/form_error_message', object: @aws_account %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
      <div class="col-sm-2">
        &nbsp;
      </div>
      <div class="col-sm-8">
        <p>Leave Access Key ID, Secret Access Key blank if you are not updating those values.</p>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :access_key_id, 'Access Key ID', class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.text_field :access_key_id, value: '', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :secret_access_key, 'Secret Access Key', class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.text_field :secret_access_key, value: '', class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
      <label class="control-label col-sm-2">RDS Instances</label>

      <div class="col-sm-10">
        <div class="aws_rds_instances">
          <%= f.fields_for :aws_rds_instances do |aws_rds_instance| %>
              <%= render 'aws_rds_instance_fields', f: aws_rds_instance %>
          <% end %>
        </div>
        <%= link_to_add_association 'Add', f, :aws_rds_instances,
                                    'data-association-insertion-method' => :append,
                                    'data-association-insertion-node' => '.aws_rds_instances',
                                    :class => 'btn btn-default' %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">EC2 Instances</label>

      <div class="col-sm-10">
        <div class="aws_ec2_instances">
          <%= f.fields_for :aws_ec2_instances do |aws_ec2_instance| %>
              <%= render 'aws_ec2_instance_fields', f: aws_ec2_instance %>
          <% end %>
        </div>
        <%= link_to_add_association 'Add', f, :aws_ec2_instances,
                                    'data-association-insertion-method' => :append,
                                    'data-association-insertion-node' => '.aws_ec2_instances',
                                    :class => 'btn btn-default' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">&nbsp;</div>
      <div class="col-sm-4">
        <%= render 'shared/form_action_bar', f: f %>
      </div>
    </div>
<% end %>