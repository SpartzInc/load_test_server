<div class="container">
  <%= render 'shared/index_action_bar', title: 'User Scenarios',
             new_object_path: new_user_scenario_path %>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th># of Steps</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @user_scenarios.each do |user_scenario| %>
      <tr>
        <td>
          <%= user_scenario.name %>
        </td>
        <td><%= user_scenario.user_scenario_steps.count %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', user_scenario, :class => 'btn btn-info' %>

            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              Actions <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Edit', edit_user_scenario_path(user_scenario) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Destroy', user_scenario, :method => 'delete', data: {confirm: 'Are you sure?'} %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="4">
        <%= will_paginate @test_schedules, renderer: BootstrapPagination::Rails %>
      </td>
    </tr>
    </tfoot>
  </table>
</div>
