<div class="container">
  <%= render 'shared/show_action_bar', title: 'Show User Scenario',
             objects_path: user_scenarios_path,
             edit_object_path: edit_user_scenario_path %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Steps</h3>
    </div>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>#</th>
        <th>Request Type</th>
        <th>Request URL</th>
      </tr>
      </thead>
      <tbody>
      <% if @user_scenario.user_scenario_steps.count > 0 %>
        <% @user_scenario.user_scenario_steps.each_with_index do |user_scenario_step, index| %>
          <tr>
            <td><%= index + 1 %></td>
              <td><%= user_scenario_step.request_type %></td>
              <td>
                <%= truncate user_scenario_step.request_url, :length => 50, :separator => /\w/,
                             :omission => '...' %>
              </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2">None</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>