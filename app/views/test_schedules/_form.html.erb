<%= form_for(@test_schedule, html: {:class => "form-horizontal", :role => 'form'}) do |f| %>
  <%= render 'shared/form_error_message', object: @test_schedule %>

  <div class="form-group">
    <%= f.label :load_test_id, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.collection_select(:load_test_id, LoadTest.all, :id, :name, {:prompt => 'Please Select Load Test'}, {:class => 'form-control'}) %>
    </div>
  </div>
    <p>Can only schedule tests now, will fix schedule later at some other time.</p>
  <div class="form-group">
    <%= f.label :schedule_now, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.check_box :schedule_now, class: 'form-control', disabled: true %>
    </div>
  </div>
    <!--
  <div class="form-group">
    <%= f.label :schedule_at, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= f.datetime_select :schedule_at, disabled: true %>
    </div>
  </div>-->

    <%= render 'shared/form_action_bar', f: f %>
<% end %>