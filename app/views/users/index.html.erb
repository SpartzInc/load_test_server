<div class="container">
  <%= render 'shared/index_action_bar', title: 'Users',
             new_object_path: new_user_path %>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', user, :class => 'btn btn-info' %>

            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              Actions <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Edit', edit_user_path(user) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Destroy', user_path(user), :method => 'delete', data: {confirm: 'Are you sure?'} %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>