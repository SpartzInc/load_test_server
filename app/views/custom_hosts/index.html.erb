<div class="container">
  <%= render 'shared/index_action_bar', title: 'Custom Hosts',
             new_object_path: new_custom_host_path %>

    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <table class="table table-striped">
        <thead>
        <tr>
          <th>Hostname</th>
          <th>Description</th>
          <th>I.P. Address</th>
          <th>Active</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @custom_hosts.each do |host| %>
            <tr>
              <td><%= host.hostname %></td>
              <td><%= host.description %></td>
              <td><%= host.ip_address %></td>
              <td><input type="checkbox" class="switch" data-host-id="<%=host.id%>" data-hostname="<%= host.hostname %>" data-readonly="true" data-size="small" <%= 'checked=true' if host.active %>></td>
              <td>
                <div class="btn-group">
                  <!-- Show link - currently not needed? -->
                  <%#= link_to 'Show', host, :class => 'btn btn-info' %>

                  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    Actions <span class="caret"></span>
                  </button>

                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to 'Edit', edit_custom_host_path(host) %></li>
                    <li class="divider"></li>
                    <li><%= link_to 'Destroy', custom_host_path(host), :method => 'delete', data: {confirm: 'Are you sure?'} %></li>
                  </ul>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </table>

    <br>
  <% if Rails.env.development? %>
      <code>:> ghost list</code>
    <div> <pre id="ghost-list"><%= `ghost list` %></pre> </div>
  <% end %>

</div>



